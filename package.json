{
  "version": "0.0.8",
  "private": false,
  "name": "@jimber/shared-components",
  "description": "All purpose vue components made by Jimber",
  "author": "Jimber",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn build",
    "serve": "vite preview",
    "build": "vue-tsc --noEmit && vite build",
    "postbuild": "tsc -p ./tsconfig.types.json",
    "build-package": "vue-tsc && vite build --target lib --name file-browser ./src/FileManager.vue",
    "dev": "vite",
    "pretty": "prettier --write \"./**/*.{js,jsx,json,vue,ts}\""
  },
  "dependencies": {
    "axios": "^0.21.1",
    "element-plus": "^1.0.2-beta.28",
    "vue": "^3.0.5",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/node": "^16.0.0",
    "@vitejs/plugin-vue": "^1.2.3",
    "@vue/compiler-sfc": "^3.0.5",
    "tailwindcss": "^2.2.2",
    "autoprefixer": "^10.2.6"
  },
  "main": "./dist/shared-components.umd.js",
  "module": "./dist/shared-components.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/shared-components.es.js",
      "require": "./dist/shared-components.umd.js"
    }
  },
  "devDependencies": {
    "tailwindcss-debug-screens": "^2.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2",
    "vite": "^2.3.8",
    "vue-tsc": "^0.0.24"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
